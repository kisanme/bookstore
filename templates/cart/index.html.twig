{% extends 'base.html.twig' %}

{% block title %}- Cart{% endblock %}

{% block main %}
<div class="container">
    <div class="col-md-12">
        <h1>Cart</h1>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <td>#</td>
                    <td>Name</td>
                    <td>Author</td>
                    <td>Price</td>
                    <td></td>
                </thead>
                <tbody>
                    {% for book in cart_items %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ book.name }}</td>
                        <td>{{ book.author }}</td>
                        <td>{{ book.price }}</td>
                        <td class="pull-right">
                            <a data-url="{{ path('remove_from_cart', { book: book.id }) }}" class="remove-from-cart btn btn-sm btn-info" data-id="{{ book.id }}"><i class="fa fa-shopping-cart"></i>Remove from Cart</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td>Total Sum</td>
                        <td></td>
                        <td></td>
                        <td>{{ invoice.TotalPayable }}</td>
                    </tr>
                    {% for discount in invoice.discounts %}
                    <tr>
                        <td>Discounts</td>
                        <td>{{ discount.name }}</td>
                        <td></td>
                        <td>{{ discount.amount }}</td>
                    </tr>
                    {% endfor %}
                    {% if coupon is defined and coupon is not null %}
                    <tr>
                        <td>Coupon Codes</td>
                        <td>15% discount for the total bill</td>
                        <td>{{ coupon.CouponCode }}</td>
                        <td>{{ coupon.amount }}</td>
                    </tr>
                    {% endif %}
                    <tr>
                        <td>Net Total</td>
                        <td></td>
                        <td></td>
                        <td>{{ invoice.NetTotal }}</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {% if coupon is not defined or coupon is null %}
            {{ form(coupon_form, {'attr': {'class': 'coupon-form'}})}}
        {% endif %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('cart-mixin') }}
{% endblock %}
