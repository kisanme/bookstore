{% extends 'base.html.twig' %}

{% block title %}- Cart{% endblock %}

{% block main %}
<div class="container">
    <div class="col-md-12">
        <h1>Cart</h1>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <td>#</td>
                    <td>Name</td>
                    <td>Author</td>
                    <td>Price</td>
                    <td></td>
                </thead>
                <tbody>
                    {% for book in cart_items %}
                        
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ book.name }}</td>
                        <td>{{ book.author }}</td>
                        <td>{{ book.price }}</td>
                        <td class="pull-right">
                            <a data-url="{{ path('remove_from_cart', { book: book.id }) }}" class="remove-from-cart btn btn-sm btn-info" data-id="{{ book.id }}"><i class="fa fa-shopping-cart"></i>Remove from Cart</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('cart-mixin') }}
{% endblock %}
